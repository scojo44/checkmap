{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "additionalProperties": false,
  "anyOf": [
    {"required": ["name"]},
    {"required": ["description"]}
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "description": {
      "type": "string",
      "minLength": 1
    }
  }
}
